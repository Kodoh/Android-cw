<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekSelect"
    android:background="@color/color_background">

    <TextView
        android:id="@+id/BrightnessLabel"
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:textColor="@color/color_text"
        android:layout_marginTop="32dp"
        android:soundEffectsEnabled="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/SummaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BrightnessLabel" />


    <TextView
        android:id="@+id/SummaryLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toEndOf="@+id/SummaryLabel"
        app:layout_constraintTop_toBottomOf="@+id/BrightnessLabel" />

    <TextView
        android:id="@+id/SummaryLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toEndOf="@+id/imageButton6"
        app:layout_constraintTop_toBottomOf="@+id/SummaryLabel2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="732dp"
        android:layout_height="38dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="monospace"
        android:text="@string/choose_week"
        android:textAlignment="center"
        android:textColor="@color/color_text"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LightingLabel"
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/color_text"
        android:layout_marginTop="24dp"
        android:soundEffectsEnabled="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_corners"
        android:contentDescription="Week Select"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:text="@string/choose_week"
        android:textAlignment="center"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LightingLabel" />

    <Button
        android:id="@+id/textView3"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_corners"
        android:contentDescription="Week Select"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:text="@string/choose_week"
        android:textAlignment="center"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LightingLabel" />

    <Button
        android:id="@+id/textView4"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        android:contentDescription="Week Select"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:text="@string/choose_week"
        android:textAlignment="center"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/textView5"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        android:contentDescription="Week Select"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:text="@string/choose_week"
        android:textAlignment="center"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/back"
        android:contentDescription="Last Week"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:rotation="180"
        android:src="@drawable/back"
        android:contentDescription="Next Week"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>